<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Składki izba aptekarska{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('css/styl.css') }}" rel="stylesheet"/>
        {% endblock %}
        {% block scripts %}{% endblock %}
    </head>
    <body>
        <div id="caly_div">
            <div id="belka_gora">
                <div class="pole_belka_gora">
                    <a href="{{ path('member_user_index') }}" >członkowie</a>
                </div>
                <div class="pole_belka_gora">
                    <a href="{{ path('job_index') }}">stanowiska</a>
                    {# <a href="{{ path('contribution_new') }}">nowa wpłata</a> #}
                </div>
                <div class="pole_belka_gora">
                    <a href="{{ path('contribution_index') }}">składki</a>
                </div>
                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <div class="pole_belka_gora">
                    <a class="link" href="{{ path('app_logout') }}" >wyloguj</a>
                </div>
                <div class="pole_belka_gora_doprawej">zalogowany jako: {{ app.user.username }}</div>
                {% else %}
                <div class="pole_belka_gora">
                    <a class="link" href="{{ path('app_login') }}" >zaloguj się</a>
                </div>
                {% endif %}
                </div>
            <div id="body_div">
            {% block body %}{% endblock %}
            </div>
            <br>
            <div id="belka_dol">
            {% block belka_dol %}{% endblock %}
            </div>
            {% block javascripts %}{% endblock %}
        </div>
    </body>
</html>
