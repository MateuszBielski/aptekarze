{% extends 'base.html.twig' %}

{% block title %}Edytuj dane członka{% endblock %}

{% block scripts %}
            <script type="text/javascript" src="../../../js/jquery-2.1.3.min.js"></script>
            <script type="text/javascript" src="../../../js/jquery-ui.js"></script>
            <script type="text/javascript" src="../../../js/generateTableMonthsReckoning.js"></script>
{% endblock %}

{% block body %}
    <h3>Edytuj dane członka</h3>
    <h4>{{ member_user.firstname }} {{ member_user.surname }}</h4>
    {{ include('member_user/_form.html.twig', {'button_label': 'Zatwierdź zmiany'}) }}
    {{ include('member_user/_monthsReckoning.html.twig') }}
    {{ include('member_user/_delete_form.html.twig') }}
{% endblock %}
{% block belka_dol %}   
    {# <a href="{{ path('member_user_index') }}">powrót do listy</a> #}
    <div class="pole_belka_dol">
        <a href="{{ path('member_user_show', {'id': member_user.id}) }}">rezygnuj ze zmian</a>
    </div>
    <div class="pole_belka_dol">
        <label for="submit-form" class="submit_label">Zatwierdź zmiany</label>{# tabindex="0" #}
    </div>
    {% if member_user.job.rate > 0 %}
        <div class="pole_belka_dol">
            <a href="{{ path('member_user_addJobHistory', {'id': member_user.id}) }}" style="font-size: 12px">dodaj zmianę stanowiska w przeszłości</a>
        </div>
    {% endif %}
    <div class="pole_belka_dol">
        <label for="submit-delete" class="submit_label">usuń użytkownika</label>
    </div>
{% endblock %}